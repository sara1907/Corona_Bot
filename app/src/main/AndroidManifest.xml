<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proaxive_ltd.socio_distancing">
    <uses-feature
        android:name="android.hardware.camera.any"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />
    <uses-permission android:name="android.hardware.camera.font" />

    <uses-permission android:name="android.hardware.camera.front.autofocus" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.hardware.camera" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3412000284180833~4203218408"/>
        <activity
            android:name="com.proaxive_ltd.socio_distancing.About_App"
            android:hardwareAccelerated="false"
            android:screenOrientation="userLandscape" />
        <activity
            android:name="com.proaxive_ltd.socio_distancing.About_COVID_19"
            android:screenOrientation="userLandscape"/>
        <activity
            android:name="com.proaxive_ltd.socio_distancing.Chest_Scanner_Open_Cam"
            android:hardwareAccelerated="true"
            android:screenOrientation="userPortrait"
            />
        <activity
            android:name="com.proaxive_ltd.socio_distancing.Classifier"
            android:hardwareAccelerated="true"
            android:screenOrientation="userPortrait"/>
        <activity
            android:name="com.proaxive_ltd.socio_distancing.MainActivity"
            android:hardwareAccelerated="true"
            android:screenOrientation="userLandscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.soundcloud.android.crop.CropImageActivity"/>
    </application>


</manifest>